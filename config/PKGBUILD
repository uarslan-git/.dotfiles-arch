  # Functions
  paru() {
  	if ! pacman -Qeq | grep -i paru; then
		git clone https://aur.archlinux.org/paru.git
		pushd paru
		makepkg -sif
		popd
		rm -rf paru
	fi
  }

  zsh() {
	  if [ $(basename $SHELL) != "zsh" ]; then
	  	chsh -s /usr/bin/zsh
	  fi
  }

  paru
  zsh

package() {
  tar -xf rootfs.tar -C "$pkgdir"
}
