#!/usr/bin/bash

set -x

lockscreenPicture=("-i" "$XDG_CONFIG_HOME/lock.png")

    i3lock -c 000000 -C "${lockscreenPicture[@]}" \
      --pass-media-keys \
      --pass-screen-keys \
      --pass-volume-keys \
            --force-clock \
      --inside-color 00000000 --insidever-color 00000000 --insidewrong-color 00000000 \
      --date-str %F \
      --date-color ffffff \
      --time-color ffffff \
      --verif-text= --wrong-text= --noinput-text= \
      --redraw-thread

}
