#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(find ~/config/rootfs/etc ~/config/rootfs/usr ~/Drive/Drive2/Obsidian ~/Repos ~/Gitlab ~/Github ~/.config -mindepth 1 -maxdepth 1 -type d | fzf)
fi

[[ -z "$selected" ]] && exit 0

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
    # Start the session in project root
    tmux new-session -ds "$selected_name" -c "$selected" \
        "export PROJECT_ROOT=\"$selected\"; cd \"\$PROJECT_ROOT\"; exec \$SHELL"

    # Set the default path for new windows
    tmux set-option -t "$selected_name" default-path "$selected"

    # Inject the function override

    tmux send-keys -t "$selected_name" "
cd() {
  local dest=\"\${1:-\$PROJECT_ROOT}\"
  if [[ \"\$1\" == \"~\" || -z \"\$1\" ]]; then
    builtin cd \"\$PROJECT_ROOT\"
  else
    builtin cd \"\$dest\"
  fi
}
clear
" C-m

fi
if [[ -z "$TMUX" ]]; then
    tmux attach -t "$selected_name"
else
    tmux switch-client -t "$selected_name"
fi

